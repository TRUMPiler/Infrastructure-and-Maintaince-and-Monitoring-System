<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Complaints</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Tables</li>
                        <li class="breadcrumb-item active">Complaints</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Complaint ID</th>
                                        <th>Description</th>
                                        <th>Complaint Type</th>
                                        <th>Image</th>
                                        <th>Status</th>
                                        <th>Users</th>
                                        <th>Complain Registration Date</th>
                                        <th>Complain Completion Date</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @model List<Infrastructure_and_Maintaince_and_monitoring_system.Models.Complaint>
                                    @foreach (var complaint in Model)
                                    {
                                    <tr>
                                        <td>@complaint.ComplaintID</td>
                                        <td>@complaint.Description</td>
                                        <td>@complaint.ComplaintType</td>

                                        @if (!complaint.Image.ToString().Contains("No Image"))
                                        {
                                            <td><a href="~/Admins/dist/img/@complaint.Image" target="_blank">Click to View</a></td>

                                        }
                                        else
                                        {
                                            <td>No Image to display</td>

                                        }
                                        <td>@complaint.Status</td>
                                        <td>
                                            @foreach (var user in complaint.Users)
                                            {
                                                <span>@user.LoginID @Html.Raw("-") @user.Name</span><br>
                                            }


                                        </td>
                                        <td>@DateTime.Parse(complaint.Complain_Registration_Date).ToString("dd-MM-yyyy")</td>

                                        @if (complaint.Complain_Completion_Date.Equals("") || complaint.Complain_Completion_Date == null)
                                        {
                                            <td>Yet to Completed</td>
                                        }
                                        else
                                        {
                                            <td>@DateTime.Parse(complaint.Complain_Completion_Date).ToString("dd-MM-yyyy")</td>
                                        }

                                        @if (complaint.Status.Contains("Pending"))
                                        {
                                            <td> <button onclick="window.location.href='@Url.Action("Delete", "Faculty", new { complaintID = complaint.ComplaintID })'">Delete</button></td>


                                        }
                                        else if (complaint.Status.Contains("Completed") && !complaint.HasFeedback)
                                        {
                                            <td> <button onclick="window.location.href='@Url.Action("GiveFeedback", "Faculty", new { complaintid = complaint.ComplaintID })'">Give Feedback</button></td>
                                        }
                                        else if ((complaint.Status.Contains("Completed") && complaint.HasFeedback) && Session["Role"].ToString().Contains("CR") || Session["Role"].ToString().Contains("LR"))
                                        {
                                            <td>Feedback recieved</td>
                                        }


                                    </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Complaint ID</th>
                                        <th>Description</th>
                                        <th>Complaint Type</th>
                                        <th>Image</th>
                                        <th>Status</th>
                                        <th>Users</th>
                                        <th>Complain Registration Date</th>
                                        <th>Complain Completion Date</th>
                                        <th>Action</th>

                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
