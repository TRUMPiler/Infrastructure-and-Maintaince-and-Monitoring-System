<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="~/Scripts/home.js"></script>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm navbar-dark bg-info">
            <div class="container">
                <a class="navbar-brand text-black">Logo</a>
                <button class="navbar-toggler" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            @{
                                String Link_Name = ViewBag.Title;
                            }
                            <!--<a class="nav-link text-black">Home</a>-->
                        <li class="nav-item">

                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                        </li>
                        
                    </ul>
                    @if (Session["LoginID"] == null)
                    {
                        <ul class="nav-item">
                            <li>
                                <!--<a class="nav-link text-black" href="~/Views/Home/Login.cshtml">Login</a>-->
                                @Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                            </li>
                        </ul>
                        <ul class="nav-item">
                            <li>
                                @*<a class="nav-link text-black">Signup</a>*@
                                @Html.ActionLink("Signup", "Login", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                            </li>
                        </ul>
                    }
                    else
                    {
                    <ul class="nav-item">
                        <li>
                            <!--<a class="nav-link text-black" href="~/Views/Home/Login.cshtml">Login</a>-->
                            @if (Session["Name"] != null)
                            {
                                @Html.ActionLink(Session["Name"].ToString(), "Index", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                            }
                            else
                            {
                                <ul class="nav-item">
                                    <li>
                                        <!--<a class="nav-link text-black" href="~/Views/Home/Login.cshtml">Login</a>-->
                                        @Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                                    </li>
                                </ul>
                                <ul class="nav-item">
                                    <li>
                                        @*<a class="nav-link text-black">Signup</a>*@
                                        @Html.ActionLink("Signup", "Login", "Home", new { area = "" }, new { @class = "nav-link text-black" })
                                    </li>
                                </ul>
                            }

                        </li>
                    </ul>
                    
                    }
                </div>
            </div>
        </nav>
    </div>
    
    @RenderBody()
    <div class="container">
    <footer>
        <p>&copy; @DateTime.Now.Year - Project created by Jainam Shah, Heli Mehta, Naishal Doshi and Pranav Chaudhari</p>
    </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>