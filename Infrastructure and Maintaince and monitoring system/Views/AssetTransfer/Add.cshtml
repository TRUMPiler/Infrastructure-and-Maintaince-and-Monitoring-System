<script>
    $(function () {
        $.validator.setDefaults({

        });
        $.validator.addMethod("letterswithspaces", function (value, element) {
            return this.optional(element) || /^[a-zA-Z\s]*$/.test(value);
        }, "Please enter only letters and spaces");
        $('#quickForm').validate({
            rules: {
                Description:
                {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },
                PhoneNo:
                {
                    required: true,
                    maxlength: 10,
                    minlength: 10,
                },
                LoginID:
                {
                    required: true,
                    minlength: 15
                    // Using the custom rule here
                },
                Email: {
                    required: true,
                    email: true,
                },
                RoomID: {
                    required: true,
                    minlength: 1,
                    maxlength: 3
                },
                terms: {
                    required: true
                },
            },
            messages: {
                PhoneNo:
                {
                    required: "Enter User's PhoneNo",
                    maxlength: "User's Phone number can't be more than 10 digits",
                    minlength: "User's Phone Number can't be less than 10 digits"
                },
                LoginID:
                {
                    required: "Please enter User's LoginID",
                    minlength: "User's LoginID can't be less than 15"
                },
                Name:
                {
                    required: "Please enter User's Name",
                    letterswithspaces: "Please enter only letters and spaces",
                    maxlength: "User's  name must not exceed 50 characters",
                    minlength: "User's  name should be more than 2 letters"
                },
                Email: {
                    required: "Please enter User's email address",
                    email: "Please enter User's valid email address"
                },
                Password: {
                    required: "Please provide User's password",
                    minlength: "User's password must be at least 5 characters long"
                },
                terms: "Please accept our terms"
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    });
</script>
