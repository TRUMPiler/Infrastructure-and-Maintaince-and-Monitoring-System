<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Complaint Filing</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Validation</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"><small>File a complaint</small></h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->

                        <form id="quickForm" method="post" action="GiveFeedback" enctype="multipart/form-data">
                            <div class="card-body">
                                @foreach (var feedback in Model)
                                {
                                    <div class="form-group">
                                        <label for="exampleInputName">Feedback</label>
                                        <input type="text" name="Description" value="@feedback.Description" class="form-control" id="exampleInputName" placeholder="Enter your feedback" disabled>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Rating</label>
                                        <select name="Rating" id="RoomID" class="form-control" disabled>
                                            @if (feedback.Rating == 5)
                                            {
                                                <option value=5 selected>Excellent</option>
                                            }
                                            else
                                            {
                                                <option value=5>Excellent</option>
                                            }
                                            @if (feedback.Rating == 4)
                                            {
                                                <option value=4 selected>Good</option>
                                            }
                                            else
                                            {
                                                <option value=4>Good</option>
                                            }
                                            @if (feedback.Rating == 3)
                                            {
                                                <option value=3 selected>Not Bad</option>
                                            }
                                            else
                                            {
                                                <option value=3>Not Bad</option>
                                            }
                                            @if (feedback.Rating == 2)
                                            {
                                                <option value=2 selected>Mediocre</option>
                                            }
                                            else
                                            {
                                                <option value=2>Mediocre</option>
                                            }
                                            @if (feedback.Rating == 1)
                                            {
                                                <option value=1 selected>Bad</option>
                                            }
                                            else
                                            {
                                                <option value=1>Bad</option>
                                            }

                                        </select>

                                    </div>

                                }

                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">

                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
